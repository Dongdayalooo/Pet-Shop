@model IEnumerable<DemoPetShop.Models.Brand>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="col-sm-12 col-xl-6">
    <div class="bg-secondary rounded h-100 p-4">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BrandName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BrandImage)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BrandDescription)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Active)
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                        <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.BrandId)
                        </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BrandName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BrandImage)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BrandDescription)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Active)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.BrandId">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.BrandId">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.BrandId">Delete</a>
                            </td>
                        </tr>
                }
            </tbody>
        </table>
    </div>
</div>