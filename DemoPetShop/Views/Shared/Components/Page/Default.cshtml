@model IEnumerable<DemoPetShop.Models.Page>

@{
}


<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="section-title">
                <span>Latest News</span>
                <h2>Pages </h2>
            </div>
        </div>
    </div>
    <div class="row">
            @foreach (var item in Model) {
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="blog__item">
                        <div class="blog__item__pic set-bg" data-setbg="@item.PageImage"></div>
                        <div class="blog__item__text">
                            <span><img src="/img/icon/calendar.png" alt=""> @item.CreateDate</span>
                            <h5>@item.PageTitle</h5>
                            <a href="/Pages/Details/?id=@item.PageId">Read More</a>
                        </div>
                    </div>
                </div>
            }
    </div>
</div>>