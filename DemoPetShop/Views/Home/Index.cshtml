@model IEnumerable<DemoPetShop.Models.Product>

@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}


<!-- Product Section Begin -->
<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="filter__controls">
                    <li class="active" data-filter="*">All Products</li>
                    <li data-filter=".cat">Product Cats</li>
                    <li data-filter=".dog">Product Dogs</li>
                    <li data-filter=".hot-sale">Vật Dụng Khác</li>
                    <li data-filter=".hot-sale1">Thuốc</li>


                </ul>
            </div>
        </div>
        <div class="row product__filter">
            

                @await Component.InvokeAsync("Cat")
            
            

                @await Component.InvokeAsync("Dog")

            </div>

        </div>
    </div>
</section>
<!-- Product Section End -->
